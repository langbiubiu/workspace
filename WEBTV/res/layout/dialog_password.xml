<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="187.33dp"
    android:background="@color/bg_dialog"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/password_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33.33dp"
        android:layout_marginTop="20dp"
        android:text="@string/enter_old_password"
        android:textColor="@color/list_select_selected"
        android:textSize="24sp" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19.33dp"
        android:orientation="horizontal" >
        
        <EditText
            android:id="@+id/edt_pwd"
	        android:layout_width="200dp"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="33.33dp"
	        android:gravity="center_vertical|right"
	        android:maxLength="4"
	        android:inputType="number"
	        android:drawableBottom="@drawable/edit_bottom_line2"
	        android:textCursorDrawable="@drawable/edit_cursor"
	        android:textColor="@color/text_selected"
	        android:textSize="24sp"
	        android:background="@android:color/transparent" />
        
        <Button
            android:id="@+id/btn_hide"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="23.33dp"
            android:background="@drawable/selector_btn_display" />
    </LinearLayout>
    
    <Button
		android:id="@+id/btn_submit"
        android:layout_width="103.33dp"
        android:layout_height="40dp"
        android:layout_marginLeft="183.33dp"
        android:layout_marginTop="16.67dp"
        android:gravity="center"
        android:text="@string/submit"
        android:textColor="@color/text_selected"
        android:textSize="24sp"
        android:background="@drawable/selector_list" />

</LinearLayout>
