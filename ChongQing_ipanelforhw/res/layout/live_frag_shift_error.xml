<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/anim_view"
    android:layout_width="1199px"
    android:layout_height="747px"
    android:layout_marginLeft="363px"
    android:layout_marginTop="146px"
    android:background="@drawable/live_bg_pause" >

    <ipanel.join.ad.widget.ImageAdView
        android:id="@+id/ad"
        android:layout_width="1127px"
        android:layout_height="453px"
        android:layout_marginLeft="36px"
        android:layout_marginTop="33px"
        android:background="@drawable/live_ad_pause"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:id="@+id/content_pause_neterror"
        android:layout_width="fill_parent"
        android:layout_height="210px"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom" >

        <ImageView
            android:layout_width="225px"
            android:layout_height="59px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="68px"
            android:background="@drawable/live_neterror_icon" />

        <Button
            android:id="@+id/bt_neterror_continue"
            android:layout_width="221px"
            android:layout_height="65px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="594px"
            android:background="@drawable/live_indicator_normal"
            android:gravity="center"
            android:text="@string/btn_setting"
            android:textColor="#ffffff"
            android:textSize="@dimen/normal_text_size" >
        </Button>

        <Button
            android:id="@+id/bt_neterror_exit"
            android:layout_width="221px"
            android:layout_height="65px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="867px"
            android:background="@drawable/live_indicator_normal"
            android:gravity="center"
            android:text="@string/btn_quit"
            android:textColor="#ffffff"
            android:textSize="@dimen/normal_text_size" >
        </Button>
    </RelativeLayout>

</FrameLayout>