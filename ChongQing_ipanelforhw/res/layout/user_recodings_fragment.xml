<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.ipanel.join.cq.user.UserTitle
        android:id="@+id/user_record_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="910px"
        android:layout_y="58px" >
    </com.ipanel.join.cq.user.UserTitle>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="1430px"
        android:layout_y="58px"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/user_record_curpage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32px" />

        <TextView
            android:id="@+id/user_record_totalpage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hang"
            android:textSize="32px" />
    </LinearLayout>

    <TextView
        android:id="@+id/record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="97px"
        android:layout_y="52px"
        android:text="@string/myRecordings"
        android:textSize="48px"
        android:visibility="gone" />

    <ListView
        android:id="@+id/recoding_list"
        android:layout_width="1451px"
        android:layout_height="800px"
        android:layout_x="81px"
        android:layout_y="144px"
        android:scrollbars="none" />

</AbsoluteLayout>