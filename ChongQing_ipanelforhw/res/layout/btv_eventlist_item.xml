<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="875px"
    android:layout_height="91px"
    android:background="@drawable/vod_channel_type_bg_sl"
    android:focusable="true" >

    <TextView
        android:id="@+id/event_time"
        android:layout_width="100px"
        android:layout_height="91px"
        android:layout_marginLeft="40px"
        android:duplicateParentState="true"
        android:gravity="center_vertical"
        android:textColor="@drawable/back_sl_tab_text"
        android:textSize="36px" />

    <TextView
        android:id="@+id/event_name"
        android:layout_width="670px"
        android:layout_height="91px"
        android:layout_marginLeft="205px"
        android:duplicateParentState="true"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@drawable/back_sl_tab_text"
        android:textSize="36px" />

</RelativeLayout>