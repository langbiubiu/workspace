<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="530px"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_alignParentRight="true"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="277px"
    android:background="@drawable/common_voice_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px">
        <TextView 
            android:id="@+id/weather_des"
            android:layout_width="485px"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10px"
            android:paddingLeft="20px"
            android:paddingTop="10px"
            android:lineSpacingExtra="5px"
            android:maxLines="3"
            android:textColor="@color/black"
            android:textSize="35px"
            android:text="@string/voice_test4"
            android:background="@drawable/common_voice_weather_response1"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="492px"
        android:layout_height="350px"
        android:layout_marginTop="10px"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/common_voice_weather_response2">
        <TextView 
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:layout_marginLeft="20px"
            android:textColor="@color/white"
            android:textSize="60px"
            android:text="@string/voice_city"/>
        <TextView 
            android:id="@+id/temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/city"
            android:layout_marginTop="50px"
            android:layout_marginLeft="20px"
            android:singleLine="true"
            android:text="@string/voice_test5"
            android:textColor="@color/white"
            android:textSize="60px"/>
        <ImageView 
            android:id="@+id/weather_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/temp"
            android:layout_marginLeft="60px"
            android:layout_marginTop="130px"
            android:src="@drawable/common_weather_icon_cloud02"/>
        <TextView 
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/temp"
            android:layout_marginTop="30px"
            android:layout_marginLeft="20px"
            android:text="@string/voice_test6"
            android:textColor="@color/white"
            android:textSize="40px"/>
        <TextView 
            android:id="@+id/weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/date"
            android:layout_toRightOf="@+id/date"
            android:layout_marginLeft="110px"
            android:text="@string/voice_test7"
            android:textColor="@color/white"
            android:textSize="40px"/>
    </RelativeLayout>
    
    
</LinearLayout>