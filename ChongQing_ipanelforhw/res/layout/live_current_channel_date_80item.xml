<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="105px"
    android:background="@drawable/live_list_channel_80focus"
    android:focusable="true"
    android:gravity="center"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/is_hk"
        android:layout_width="90px"
        android:layout_height="105px"
        android:duplicateParentState="true"
        android:gravity="center"
        android:text="@string/channel_back"
        android:textColor="@color/live_item_channeltv_color"
        android:textSize="30px" />

    <TextView
        android:id="@+id/live_program_date"
        android:layout_width="100px"
        android:layout_height="105px"
        android:duplicateParentState="true"
        android:gravity="center"
        android:textColor="@color/live_item_channeltv_color"
        android:textSize="40px" />

    <TextView
        android:id="@+id/live_program_week"
        android:layout_width="90px"
        android:layout_height="105px"
        android:duplicateParentState="true"
        android:gravity="center"
        android:textColor="@color/live_item_channeltv_color"
        android:textSize="40px" />

    <ImageView
        android:id="@+id/live_program_sj"
        android:layout_width="15px"
        android:layout_height="30px"
        android:layout_marginLeft="20px"
        android:background="@drawable/live_jt"
        android:gravity="center"
        android:visibility="invisible" />

</LinearLayout>