<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="210px"
    android:orientation="horizontal"
    android:background="@drawable/user_buttom"> 
    <LinearLayout
        android:id="@+id/del_one"
        android:layout_height="210px"
        android:layout_width="215px"
        android:layout_marginLeft="100px"
        android:focusable="true"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="@drawable/user_delete_bg">
        <ImageView
            android:layout_height="80px"
            android:layout_width="80px"
            android:layout_marginTop="30px"
            android:layout_gravity="center_horizontal"
            android:duplicateParentState="true"
            android:background="@drawable/user_del_one_selector"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:layout_gravity="center_horizontal"
            android:text="@string/delone"
            android:textSize="40px"
            android:duplicateParentState="true"
            android:textColor="@drawable/delete_textcolor"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/del_all"
        android:layout_height="210px"
        android:layout_width="215px"
        android:focusable="true"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:background="@drawable/user_delete_bg">
        <ImageView
            android:layout_height="80px"
            android:layout_width="80px"
            android:layout_marginTop="30px"
            android:layout_gravity="center_horizontal"
            android:duplicateParentState="true"
            android:background="@drawable/user_del_one_selector"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:layout_gravity="center_horizontal"
            android:text="@string/delall"
            android:textSize="40px"
            android:duplicateParentState="true"
            android:textColor="@drawable/delete_textcolor"/>
    </LinearLayout>
       
</LinearLayout>
