<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/channel_total_column"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="#666666"
        android:textSize="32px" />

    <TextView
        android:id="@+id/channel_column"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/channel_total_column"
        android:textColor="#f0f0f0"
        android:textSize="32px" />

    <ListView
        android:id="@+id/channel_type_list"
        android:layout_width="330px"
        android:layout_height="630px"
        android:layout_marginTop="190px"
        android:divider="@android:color/transparent"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none" >
    </ListView>

    <android.support.v4.view.VerticalViewPager2
        android:id="@+id/channel_viewpager"
        android:layout_width="1050px"
        android:layout_height="800px"
        android:layout_toRightOf="@+id/channel_type_list"
        android:layout_marginLeft="60px"
        android:layout_marginTop="100px" />

</RelativeLayout>