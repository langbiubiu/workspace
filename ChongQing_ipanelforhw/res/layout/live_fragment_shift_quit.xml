<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1920px"
    android:layout_height="1280px" >

    <RelativeLayout
        android:id="@+id/ad_rl"
        android:layout_width="750px"
        android:layout_height="420px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="235px" >

        <ImageView
            android:id="@+id/shift_ad"
            android:layout_width="match_parent"
            android:layout_height="340px"
            android:background="@drawable/live_ad_img_01"
            android:focusable="true"
            android:scaleType="fitXY"
            android:src="@drawable/live_selector_ad" />

        <TextView
            android:id="@+id/btn_ok"
            android:layout_width="375px"
            android:layout_height="80px"
            android:layout_below="@+id/shift_ad"
            android:background="@drawable/vod_moviebutton"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/vod_resume"
            android:textColor="@color/vod_font_style"
            android:textSize="42px" />

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="375px"
            android:layout_height="80px"
            android:layout_below="@+id/shift_ad"
            android:layout_toRightOf="@+id/btn_ok"
            android:background="@drawable/vod_moviebutton"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/vod_exitad"
            android:textColor="@color/vod_font_style"
            android:textSize="42px" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_pause"
        android:layout_width="97px"
        android:layout_height="97px"
        android:layout_alignParentRight="true"
	    android:layout_marginRight="420px"
	    android:layout_marginTop="60px"
        android:src="@drawable/live_icon_zt"
        android:visibility="visible" />
    
</RelativeLayout>