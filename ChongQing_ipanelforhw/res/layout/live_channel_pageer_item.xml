<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true" >

    <TextView
        android:id="@+id/channel_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45px"
        android:layout_marginTop="23px"
        android:ellipsize="marquee"
        android:maxWidth="240px"
        android:singleLine="true"
        android:textSize="39px" />

    <ImageView
        android:id="@+id/channel_type"
        android:layout_width="48px"
        android:layout_height="48px"
        android:layout_alignTop="@id/channel_name_txt"
        android:layout_marginLeft="15px"
        android:layout_toRightOf="@id/channel_name_txt"
        android:src="@null" />

    <ImageView
        android:id="@+id/favorite_type"
        android:layout_width="48px"
        android:layout_height="48px"
        android:layout_alignTop="@id/channel_name_txt"
        android:layout_marginLeft="15px"
        android:layout_toRightOf="@id/channel_type"
        android:src="@drawable/live_favorite_flag" />

    <ImageView
        android:id="@+id/program_type"
        android:layout_width="3px"
        android:layout_height="30px"
        android:layout_marginLeft="45px"
        android:layout_marginTop="68px" />

    <TextView
        android:id="@+id/program_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/program_type"
        android:layout_marginLeft="15px"
        android:layout_toRightOf="@id/program_type"
        android:ellipsize="marquee"
        android:maxWidth="270px"
        android:singleLine="true"
        android:textSize="33px" />

</RelativeLayout>