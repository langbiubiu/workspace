<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/program_total_column"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="#666666"
        android:textSize="32px" />

    <TextView
        android:id="@+id/program_column"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/program_total_column"
        android:textColor="#f0f0f0"
        android:textSize="32px" />

    <ListView
        android:id="@+id/time_zone"
        android:layout_width="330px"
        android:layout_height="630px"
        android:layout_marginTop="190px"
        android:divider="@android:color/transparent"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none" >
    </ListView>

    <ListView
        android:id="@+id/program_list"
        android:layout_width="1050px"
        android:layout_height="810px"
        android:layout_marginLeft="60px"
        android:layout_marginTop="100px"
        android:layout_toRightOf="@+id/time_zone"
        android:divider="@android:color/transparent"
        android:dividerHeight="10px"
        android:scrollbars="none" >
    </ListView>

</RelativeLayout>