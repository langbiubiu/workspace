<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/transparent_background" >



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="165px"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="#2c2c2c" >

        <FrameLayout
            android:layout_width="225px"
            android:layout_height="match_parent"
            android:layout_marginLeft="45px" >

            <ImageView
                android:id="@+id/play_state"
                android:layout_width="75px"
                android:layout_height="75px"
                android:layout_gravity="center" />
        </FrameLayout>

        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:layout_marginLeft="255px"
            android:background="#55000000" />

        <TextView
            android:id="@+id/current_event_name"
            style="@style/marquee_style"
            android:layout_width="450px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="285px"
            android:layout_marginTop="60px"
            android:textColor="#f6ffde"
            android:textSize="39px" />

        <TextView
            android:id="@+id/now_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1170px"
            android:layout_marginTop="75px"
            android:textColor="#f0f0f0"
            android:textSize="27px" />

        <TextView
            android:id="@+id/total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1350px"
            android:layout_marginTop="38px"
            android:textColor="#f0f0f0"
            android:textSize="27px" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="180px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1350px"
            android:layout_marginTop="90px"
            android:text="@string/user_name_live"
            android:textColor="#f0f0f0"
            android:textSize="24px" />

        <com.ipanel.join.topway.homed.live.view.LiveSeekBar
            android:id="@+id/pf_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="1245px"
            android:layout_height="14px"
            android:layout_marginLeft="285px"
            android:layout_marginTop="18px"
            android:focusable="false"
            android:gravity="center"
            android:max="1000"
            android:progress="100"
            android:progressDrawable="@drawable/live_shift_progress_drawable"
            android:thumb="@drawable/transparent_background" />

        <ImageView
            android:layout_width="345px"
            android:layout_height="180px"
            android:layout_gravity="right"
            android:scaleType="fitXY"
            android:src="@drawable/live_pf_ad" />
    </FrameLayout>
    <TextView
        android:id="@+id/play_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="150px"
        android:background="@drawable/live_current_time_bg"
        android:gravity="center"
        android:paddingBottom="23px"
        android:paddingLeft="23px"
        android:paddingRight="23px"
        android:paddingTop="5px"
        android:textColor="#000000"
        android:textSize="33px" />
</FrameLayout>