<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="165px"
    android:layout_alignParentBottom="true"
    android:background="#2c2c2c" >

    <FrameLayout
        android:layout_width="330px"
        android:layout_height="match_parent"
        android:layout_marginLeft="45px" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30px"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/channel_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#f0f0f0"
                android:textSize="54px" />

            <ImageView
                android:id="@+id/back_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8px"
                android:background="@drawable/live_pf_icon_time" />
        </LinearLayout>

        <TextView
            android:id="@+id/channel_name"
            style="@style/marquee_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="90px"
            android:singleLine="true"
            android:gravity="center_horizontal"
            android:textColor="#f0f0f0"
            android:textSize="48px" />
    </FrameLayout>

    <View
        android:layout_width="2px"
        android:layout_height="match_parent"
        android:layout_marginLeft="390px"
        android:background="#55000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="420px"
        android:layout_marginTop="45px"
        android:text="@string/current_event_label"
        android:textColor="#f6ffde"
        android:textSize="39px" />

    <TextView
        android:id="@+id/current_event"
        style="@style/marquee_style"
        android:layout_width="450px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="615px"
        android:layout_marginTop="45px"
        android:singleLine="true"
        android:textColor="#f6ffde"
        android:textSize="39px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="420px"
        android:layout_marginTop="98px"
        android:text="@string/next_event"
        android:textColor="#5a5a5a"
        android:textSize="36px" />

    <TextView
        android:id="@+id/next_event"
        style="@style/marquee_style"
        android:layout_width="465px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="555px"
        android:layout_marginTop="98px"
        android:singleLine="true"
        android:textColor="#5a5a5a"
        android:textSize="36px" />

    <TextView
        android:id="@+id/start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1170px"
        android:layout_marginTop="38px"
        android:textColor="#f0f0f0"
        android:textSize="27px" />

    <TextView
        android:id="@+id/now_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1170px"
        android:layout_marginTop="75px"
        android:textColor="#f0f0f0"
        android:textSize="27px" />

    <TextView
        android:id="@+id/end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1170px"
        android:layout_marginTop="113px"
        android:textColor="#f0f0f0"
        android:textSize="27px" />

    <TextView
        android:id="@+id/total_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1350px"
        android:layout_marginTop="38px"
        android:textColor="#f0f0f0"
        android:textSize="27px" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="180px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1350px"
        android:layout_marginTop="90px"
        android:text="@string/user_name_live"
        android:textColor="#f0f0f0"
        android:textSize="24px" />

    <com.ipanel.join.topway.homed.live.view.LiveSeekBar
        android:id="@+id/watch_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="1118px"
        android:layout_height="14px"
        android:layout_marginLeft="420px"
        android:layout_marginTop="18px"
        android:focusable="false"
        android:gravity="center"
        android:max="10000"
        android:progress="100"
        android:progressDrawable="@drawable/live_homed_progress_drawable"
        android:thumb="@drawable/transparent_background" />

    <ImageView
        android:layout_width="345px"
        android:layout_height="180px"
        android:layout_gravity="right"
        android:scaleType="fitXY"
        android:src="@drawable/live_pf_ad" />

</FrameLayout>