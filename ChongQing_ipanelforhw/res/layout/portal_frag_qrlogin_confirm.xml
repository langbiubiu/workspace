<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/anim_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout 
        android:layout_width="556dp"
        android:layout_height="276dp"
        android:layout_centerInParent="true"
        android:background="@drawable/live_dialog_bg"
        >
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="50dp"
            android:textSize="30sp"
            android:focusable="false"
            android:text="@string/shift_notice_title"/>
        <TextView 
            android:id="@+id/shift_info"
            android:layout_width="450dp"
            android:layout_height="100dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="100dp"
            android:focusable="true"
            android:textSize="26sp"
            android:text="@string/portal_poweroff_message"
            />
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:orientation="horizontal"
            android:gravity="center">
            
            <FrameLayout 
               android:id="@+id/yes_btn"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/portal_sl_rect_focus"
               android:padding="5dp"
               android:focusable="true">
                <TextView 
	                android:layout_width="200dp"
	                android:layout_height="wrap_content"
	                android:gravity="center"
	                android:text="@string/yes_button"
	                android:focusable="false"
	                android:textColor="@android:color/white"
	                android:textSize="26sp"/>
                <requestFocus />
            </FrameLayout>
            
            <FrameLayout 
               android:id="@+id/no_btn"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="5dp"
               android:background="@drawable/portal_sl_rect_focus"
               android:focusable="true"
               android:layout_marginLeft="10dp">
                <TextView 
	                android:layout_width="200dp"
	                android:layout_height="wrap_content"
	                android:gravity="center"
	                android:text="@string/no_button"
	                android:focusable="false"
	                android:textColor="@android:color/white"
	                android:textSize="26sp"/>
            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>