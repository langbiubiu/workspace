<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1920px"
    android:layout_height="201px"
    android:background="@drawable/portal_top"
    android:focusable="true" >
    
    <ImageView 
        android:id="@+id/mine_focus"
        android:layout_width="294px"
        android:layout_height="146px"
        android:src="@drawable/portal_mine_focus"
        android:layout_marginLeft="1530px"
        android:layout_marginTop="18px"/>
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45px"
        android:layout_marginLeft="1585px"
        android:orientation="horizontal">
        <ImageView
        	android:id="@+id/user"
        	android:layout_width="56px"
        	android:layout_height="56px"
        	android:focusable="true"
        	android:background="@drawable/portal_mine"/>
    	<TextView 
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:text="@string/portal_mine"
    	    android:layout_marginLeft="20px"
    	    android:textColor="@color/white"
    	    android:textSize="45px"
    	    android:gravity="center"/>
    </LinearLayout>
    
    

</RelativeLayout>
