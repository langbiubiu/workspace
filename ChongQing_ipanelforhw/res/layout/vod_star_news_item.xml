<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360px"
    android:layout_height="wrap_content"
    android:background="@drawable/vod_picture_bg_sl"
    android:focusable="true" >

    <ImageView
        android:id="@+id/star_news_pic"
        android:layout_width="354px"
        android:layout_height="198px"
        android:layout_marginLeft="3px"
        android:layout_marginTop="3px"
        android:scaleType="fitXY"
        android:src="@drawable/default_poster" />

    <TextView
        android:id="@+id/star_news_name"
        android:layout_width="360px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/star_news_pic"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30px"
        android:duplicateParentState="true"
        android:ellipsize="marquee"
        android:gravity="center_horizontal"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:textColor="@drawable/vod_star_textcolor_sl"
        android:textSize="32px" />

</RelativeLayout>