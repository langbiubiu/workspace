<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/user_reservation_item"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:focusable="true"
    android:clickable="true"
    android:background="@drawable/user_listitem_selector" >
    <TextView
        android:id="@+id/rese_name"
        android:layout_height="100px"
        android:layout_width="350px"
        android:gravity="center"
        android:textSize="36px"
        android:focusable="false"
        android:duplicateParentState="true"
        android:textColor="@drawable/user_del_text"/>
    <TextView
        android:id="@+id/rese_time"
        android:layout_height="100px"
        android:layout_width="490px"
        android:layout_marginLeft="90px"
        android:gravity="center"
        android:textSize="36px"
        android:focusable="false"
        android:duplicateParentState="true"
        android:textColor="@drawable/user_del_text"/>
    <TextView
        android:id="@+id/rese_tv"
        android:layout_height="100px"
        android:layout_width="200px"
        android:layout_marginLeft="190px"
        android:gravity="center"
        android:textSize="36px"
        android:focusable="false"
        android:singleLine="true"
		android:ellipsize="end"
        android:duplicateParentState="true"
        android:textColor="@drawable/user_del_text"/>
    
    <ImageView 
        android:id="@+id/user_rese_del"  
        android:layout_height="80px"
        android:layout_width="80px"
        android:layout_marginLeft="35px"
        android:layout_gravity="center_vertical"
        android:visibility="gone"
        android:focusable="false"
        android:duplicateParentState="true"
        android:src="@drawable/user_recoding_seletor"/>

</LinearLayout>
