<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/anim_view"
    android:layout_width="1199px"
    android:layout_height="747px"
    android:layout_marginLeft="363px"
    android:layout_marginTop="146px"
    android:background="@drawable/live_bg_pause" >

    <ipanel.join.ad.widget.ImageAdView
        android:id="@+id/ad"
        android:layout_width="1127px"
        android:layout_height="453px"
        android:layout_marginLeft="36px"
        android:layout_marginTop="33px"
        android:background="@drawable/live_ad_pause"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="210px"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom" >

        <ImageView
            android:layout_width="119px"
            android:layout_height="47px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="87px"
            android:background="@drawable/live_pause_iocn" />

        <TextView
            android:id="@+id/pause_time"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="240px"
            android:textColor="#ffffff"
            android:textSize="39px" />

        <Button
            android:id="@+id/bt_pause_continue"
            android:layout_width="221px"
            android:layout_height="65px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="594px"
            android:background="@drawable/live_indicator_normal"
            android:gravity="center"
            android:text="@string/btn_continue_play"
            android:textColor="#ffffff"
            android:textSize="@dimen/normal_text_size" >
        </Button>

        <Button
            android:id="@+id/bt_pause_hidead"
            android:layout_width="221px"
            android:layout_height="65px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="867px"
            android:background="@drawable/live_indicator_normal"
            android:gravity="center"
            android:text="@string/btn_hide_ad"
            android:textColor="#ffffff"
            android:textSize="@dimen/normal_text_size" />
    </RelativeLayout>

</FrameLayout>