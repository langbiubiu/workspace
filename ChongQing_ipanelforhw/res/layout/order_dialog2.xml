<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="702px"
    android:layout_height="387px"
    android:background="@drawable/order_dialog_bg" >

    <TextView
        android:id="@+id/order_dialog2_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="69px"
        android:gravity="center_horizontal"
        android:maxHeight="150px"
        android:paddingLeft="60px"
        android:paddingRight="60px"
        android:text="@string/order_title"
        android:textColor="#ffffffff"
        android:textSize="35px" />

    <TextView
        android:id="@+id/order_dialog2_sure"
        android:layout_width="204px"
        android:layout_height="82px"
        android:layout_marginLeft="116px"
        android:layout_marginTop="258px"
        android:background="@drawable/order_btn_selector"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/order_ok"
        android:textColor="@color/font_style"
        android:textSize="35px"
        android:visibility="visible" />

    <TextView
        android:id="@+id/order_dialog2_ok"
        android:layout_width="204px"
        android:layout_height="82px"
        android:layout_marginLeft="116px"
        android:layout_marginTop="258px"
        android:background="@drawable/order_btn_selector"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/order_recharge"
        android:textColor="@color/font_style"
        android:textSize="35px"
        android:visibility="gone" />

    <TextView
        android:id="@+id/order_dialog2_cancel"
        android:layout_width="204px"
        android:layout_height="82px"
        android:layout_gravity="right"
        android:layout_marginRight="116px"
        android:layout_marginTop="258px"
        android:background="@drawable/order_btn_selector"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/order_cancel"
        android:textColor="@color/font_style"
        android:textSize="35px"
        android:visibility="visible" />

    <FrameLayout
        android:id="@+id/order_dialog2_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="40px"
        android:visibility="gone" >

        <TextView
            android:id="@+id/order_dialog2_hundred"
            android:layout_width="170px"
            android:layout_height="62px"
            android:layout_marginLeft="50px"
            android:background="@drawable/order_btn_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/recharge_100"
            android:textColor="@color/font_style"
            android:textSize="30px" />

        <TextView
            android:id="@+id/order_dialog2_fifty"
            android:layout_width="170px"
            android:layout_height="62px"
            android:layout_marginLeft="265px"
            android:background="@drawable/order_btn_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/recharge_50"
            android:textColor="@color/font_style"
            android:textSize="30px" />

        <TextView
            android:id="@+id/order_dialog2_back"
            android:layout_width="170px"
            android:layout_height="62px"
            android:layout_marginLeft="480px"
            android:background="@drawable/order_btn_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/back"
            android:textColor="@color/font_style"
            android:textSize="30px" />

        <TextView
            android:id="@+id/order_dialog2_other"
            android:layout_width="wrap_content"
            android:layout_height="62px"
            android:layout_marginLeft="50px"
            android:layout_marginTop="80px"
            android:gravity="center"
            android:text="@string/other_amount"
            android:textColor="@color/font_style"
            android:textSize="30px" />

        <EditText
            android:id="@+id/order_dialog2_et"
            android:layout_width="270px"
            android:layout_height="62px"
            android:layout_marginLeft="180px"
            android:layout_marginTop="80px"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:hint="@string/hint"
            android:singleLine="true"
            android:textColor="@color/font_style"
            android:textSize="20px" />

        <TextView
            android:id="@+id/order_dialog2_confirm"
            android:layout_width="170px"
            android:layout_height="62px"
            android:layout_marginLeft="480px"
            android:layout_marginTop="80px"
            android:background="@drawable/order_btn_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/font_style"
            android:textSize="30px" />
    </FrameLayout>

</FrameLayout>