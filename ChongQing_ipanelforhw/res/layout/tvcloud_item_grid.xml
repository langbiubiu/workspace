<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="379px"
    android:layout_width="241px"
    android:focusable="true"
    android:background="@drawable/user_picture_bg_sl">
    
    <ImageView
        android:id="@+id/film_poster"
        android:layout_width="240px"
        android:layout_height="295px"
        android:layout_marginTop="9px"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY"
        android:src="@drawable/default_poster"/>
    
    <TextView
        android:id="@+id/record_mark"
        android:layout_width="240px"
        android:layout_height="45px"
        android:layout_marginTop="287px"
        android:gravity="center"
        android:text="@string/tv_cloud_test"
        android:textColor="@android:color/white"
        android:textSize="29px"
        android:background="#1982ff"
        android:visibility="invisible" />
    
    <TextView
        android:id="@+id/film_name"
        android:layout_width="240px"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:layout_marginTop="320px"
        android:duplicateParentState="true"
        android:textColor="@drawable/user_name_textcolor"
        android:textSize="32px" />

</FrameLayout>
