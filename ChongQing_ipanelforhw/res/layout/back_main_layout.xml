<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/back_main"
    android:background="@drawable/back_bg" >

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="90px"
        android:layout_marginTop="80px"
        layout="@layout/back_tip_layout" />

    <TextView
        android:id="@+id/back_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="390px"
        android:layout_marginTop="75px"
        android:text="@string/back_title"
        android:textColor="#f0f0f0"
        android:focusable="false"
        android:textSize="44px" />

    <TextView
        android:id="@+id/back_secondtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/back_title"
        android:layout_marginLeft="20px"
        android:layout_toRightOf="@+id/back_title"
        android:textColor="#999999"
        android:textSize="32px" />

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="1440px"
        android:layout_height="910px"
        android:layout_marginTop="80px" >
    </FrameLayout>

    <ImageView
        android:id="@+id/back_ad"
        android:layout_width="380px"
        android:layout_height="820px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="80px"
        android:layout_marginTop="170px"
        android:background="@drawable/background_sl"
        android:focusable="false"
        android:scaleType="centerInside"
        android:src="@drawable/ad_img_02" />

    <LinearLayout
        android:id="@+id/search_button"
        android:layout_width="330px"
        android:layout_height="90px"
        android:layout_marginTop="180px"
        android:background="@drawable/background_sl"
        android:focusable="true"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="108px"
            android:duplicateParentState="true"
            android:src="@drawable/icon_search_sl" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10px"
            android:duplicateParentState="true"
            android:text="@string/back_search"
            android:textColor="@color/back_text_color_sl"
            android:textSize="36px" />
    </LinearLayout>

</RelativeLayout>