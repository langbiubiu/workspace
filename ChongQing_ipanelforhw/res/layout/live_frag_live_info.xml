<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="225px"
    android:layout_marginTop="773px" >

    <RelativeLayout
        android:layout_width="1073px"
        android:layout_height="225px"
        android:layout_marginLeft="270px"
        android:background="#d9000000" >

        <TextView
            android:id="@+id/next_event_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23px"
            android:layout_marginTop="27px"
            android:text="@string/next_event_label"
            android:textColor="#ffffff"
            android:textSize="33px" />

        <TextView
            android:id="@+id/next_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="173px"
            android:layout_marginTop="27px"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textSize="33px" />

        <TextView
            android:id="@+id/noow_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="945px"
            android:layout_marginTop="23px"
            android:textColor="#ffffff"
            android:textSize="39px" />

        <TextView
            android:id="@+id/am_pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="800px"
            android:layout_marginTop="30px"
            android:textColor="#ffffff"
            android:textSize="30px" />

        <TextView
            android:id="@+id/channel_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27px"
            android:layout_marginTop="105px"
            android:textColor="#ffcc00"
            android:textSize="36px" />

        <TextView
            android:id="@+id/back_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="122px"
            android:layout_marginTop="105px"
            android:text="@string/back_play"
            android:textColor="#b40c38"
            android:textSize="36px" />

        <TextView
            android:id="@+id/channel_name"
            style="@style/marquee_style"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="150px"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textSize="42px" />

        <TextView
            android:id="@+id/current_event_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="335px"
            android:layout_marginTop="90px"
            android:text="@string/current_event_label"
            android:textColor="#ffffff"
            android:textSize="36px" />

        <TextView
            android:id="@+id/current_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="530px"
            android:layout_marginTop="90px"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textSize="36px" />

        <com.ipanel.join.topway.homed.live.view.LiveSeekBar
            android:id="@+id/watch_progress"
            android:layout_width="638px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300px"
            android:layout_marginTop="129px"
            android:focusable="false"
            android:gravity="center"
            android:max="10000"
            android:maxHeight="53px"
            android:minHeight="53px"
            android:progress="0"
            android:progressDrawable="@drawable/live_progress_drawable"
            android:thumb="@drawable/transparent_dot" />

        <TextView
            android:id="@+id/network_remind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="353px"
            android:layout_marginTop="113px"
            android:text="@string/network_info"
            android:textColor="#e5ffffff"
            android:textSize="33px" />

        <TextView
            android:id="@+id/event_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="327px"
            android:layout_marginTop="168px"
            android:textColor="#ffffff"
            android:textSize="33px" />

        <ImageView
            android:id="@+id/help_info_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="642px"
            android:layout_marginTop="168px"
            android:src="@drawable/live_key_help_1" />

        <ImageView
            android:id="@+id/help_info_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="864px"
            android:layout_marginTop="168px"
            android:src="@drawable/live_key_help_2" />
    </RelativeLayout>

    <ipanel.join.ad.widget.ImageAdView
        android:id="@+id/ad"
        android:layout_width="377px"
        android:layout_height="224px"
        android:layout_marginLeft="1352px"
        android:background="@drawable/live_pf_ad"
        android:scaleType="fitXY" />

</RelativeLayout>