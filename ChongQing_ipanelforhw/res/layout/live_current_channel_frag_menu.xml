<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent" >

    <LinearLayout
        android:layout_width="424px"
        android:layout_height="1080px"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="424px"
            android:layout_height="135px"
            android:background="#000000"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/cc_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:textColor="#969696"
                android:textSize="40px" />

            <TextView
                android:id="@+id/cc_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#969696"
                android:textSize="40px" />
        </LinearLayout>

        <ListView
            android:id="@+id/current_channel_date"
            android:layout_width="424px"
            android:layout_height="945px"
            android:divider="@android:color/transparent"
            android:listSelector="@android:color/transparent" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="550px"
        android:layout_height="1080px"
        android:layout_marginLeft="10px" >

        <LinearLayout
            android:layout_width="550px"
            android:layout_height="1080px"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="550px"
                android:layout_height="30px"
                android:alpha="0.75"
                android:background="#000000" />

            <ListView
                android:id="@+id/current_channel_program"
                android:layout_width="550px"
                android:layout_height="1050px"
                android:focusable="false"
                android:listSelector="@android:color/transparent"
                android:scrollbars="none" />
        </LinearLayout>

        <TextView
            android:id="@+id/pro_no_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="400px"
            android:text="@string/no_data_info"
            android:textColor="#969696"
            android:textSize="40px"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/bg_bc"
            android:layout_width="550px"
            android:layout_height="105px"
            android:layout_alignParentBottom="true"
            android:alpha="0.75"
            android:background="#000000"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lin_ys"
        android:layout_width="210px"
        android:layout_height="1080px"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>