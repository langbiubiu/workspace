<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="540px"
    android:layout_height="180px"
    android:background="@drawable/vod_time_jump_bg" >

    <RelativeLayout
        android:id="@+id/timesubbg2"
        android:layout_width="fill_parent"
        android:layout_height="160px"
        android:background="#00000000" >

        <TextView
            android:id="@+id/vod_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40px"
            android:text="@string/vod_jumpto"
            android:textColor="#c8c8c8"
            android:textSize="42px" />

        <TextView
            android:id="@+id/timeinputText1"
            android:layout_width="60px"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25px"
            android:layout_toRightOf="@+id/vod_word"
            android:background="@drawable/vod_number_bg"
            android:gravity="center"
            android:text="@string/timezero"
            android:textSize="42px" />

        <TextView
            android:id="@+id/timeinputText2"
            android:layout_width="60px"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15px"
            android:layout_toRightOf="@id/timeinputText1"
            android:background="@drawable/vod_number_bg"
            android:gravity="center"
            android:text="@string/timezero"
            android:textSize="42px" />

        <TextView
            android:id="@+id/clip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"
            android:layout_toRightOf="@id/timeinputText2"
            android:gravity="center"
            android:text="@string/timeclip"
            android:textSize="42px" />

        <TextView
            android:id="@+id/timeinputText3"
            android:layout_width="60px"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"
            android:layout_toRightOf="@+id/clip"
            android:background="@drawable/vod_number_bg"
            android:gravity="center"
            android:text="@string/timezero"
            android:textSize="42px" />

        <TextView
            android:id="@+id/timeinputText4"
            android:layout_width="60px"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16px"
            android:layout_toRightOf="@id/timeinputText3"
            android:background="@drawable/vod_number_bg"
            android:gravity="center"
            android:text="@string/timezero"
            android:textSize="42px" />
    </RelativeLayout>

</RelativeLayout>