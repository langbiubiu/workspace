<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/channel_list_item_width"
    android:layout_height="@dimen/channel_list_item_height"
    android:gravity="center"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/channel_left_arrow"
        android:layout_width="40dp"
        android:layout_height="21dp"
        android:gravity="center"
        android:src="@drawable/live_channel_left_arrow" />

    <TextView
        android:id="@+id/channel_name"
        style="@style/marquee_style"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:gravity="center_vertical|left"
        android:singleLine="true"
        android:textSize="26sp" />

    <ImageView
        android:id="@+id/favorite_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/live_icon_like" />

    <TextView
        android:id="@+id/current_event"
        style="@style/marquee_style"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:gravity="center_vertical|left"
        android:paddingLeft="15dp"
        android:singleLine="true"
        android:textSize="26sp" />

    <ImageView
        android:id="@+id/channel_right_arrow"
        android:layout_width="40dp"
        android:layout_height="21dp"
        android:gravity="center"
        android:src="@drawable/live_channel_right_arrow" />

</LinearLayout>