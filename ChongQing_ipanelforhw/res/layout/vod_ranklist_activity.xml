<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vod_bg" >

    <LinearLayout
        android:id="@+id/vod_left_menu"
        android:layout_width="289px"
        android:layout_height="1080px"
        android:background="@drawable/vod_list"
        android:orientation="vertical" >

        <cn.ipanel.android.widget.SimpleTab
            android:id="@+id/simple_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="115px"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/vod_rank_list1"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:background="@drawable/vod_rank_bg"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/vod_rank_list1"
                android:textColor="@color/vod_rank_list_color"
                android:textSize="40px" />

            <TextView
                android:id="@+id/vod_rank_list2"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_marginTop="25px"
                android:background="@drawable/vod_rank_bg"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/vod_rank_list2"
                android:textColor="@color/vod_rank_list_color"
                android:textSize="40px" />

            <TextView
                android:id="@+id/vod_rank_list3"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_marginTop="25px"
                android:background="@drawable/vod_rank_bg"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/vod_rank_list3"
                android:textColor="@color/vod_rank_list_color"
                android:textSize="40px" />

            <TextView
                android:id="@+id/vod_rank_list4"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_marginTop="25px"
                android:background="@drawable/vod_rank_bg"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/vod_rank_list4"
                android:textColor="@color/vod_rank_list_color"
                android:textSize="40px" />
        </cn.ipanel.android.widget.SimpleTab>
    </LinearLayout>

    <TextView
        android:id="@+id/vod_rank_totalpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="123px"
        android:layout_marginTop="50px"
        android:textColor="@color/font_color"
        android:textSize="32px" />

    <TextView
        android:id="@+id/vod_rank_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="2px"
        android:layout_marginTop="50px"
        android:layout_toLeftOf="@+id/vod_rank_totalpage"
        android:textColor="@color/light_white"
        android:textSize="32px" />

    <android.support.v4.view.VerticalViewPager2
        android:id="@+id/vod_rank_viewpager"
        android:layout_width="1460px"
        android:layout_height="843px"
        android:layout_marginLeft="350px"
        android:layout_marginTop="115px" >
    </android.support.v4.view.VerticalViewPager2>

</RelativeLayout>