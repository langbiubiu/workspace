<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg" >

    <TextView
        android:id="@+id/order_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80px"
        android:layout_marginTop="110px"
        android:text="@string/order_tips"
        android:textColor="#fff"
        android:textSize="34px" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/order_tip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="80px" >

        <TextView
            android:id="@+id/text01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_press"
            android:textColor="#fff"
            android:textSize="32px" />

        <ImageView
            android:id="@+id/pic01"
            android:layout_width="36px"
            android:layout_height="36px"
            android:layout_marginLeft="10px"
            android:layout_toRightOf="@+id/text01"
            android:background="@drawable/icon_back" />

        <TextView
            android:id="@+id/text02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:layout_toRightOf="@+id/pic01"
            android:text="@string/cancel"
            android:textColor="#fff"
            android:textSize="32px" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/arrowup"
        android:layout_width="52px"
        android:layout_height="26px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="178px"
        android:background="@drawable/order_arrow_up"
        android:visibility="invisible" />

    <android.support.v4.view.VerticalViewPager2
        android:id="@+id/order_viewpager"
        android:layout_width="1765px"
        android:layout_height="650px"
        android:layout_below="@+id/arrowup"
        android:layout_marginLeft="83px"
        android:layout_marginTop="50px"
        android:visibility="invisible" >
    </android.support.v4.view.VerticalViewPager2>

    <ImageView
        android:id="@+id/arrowdown"
        android:layout_width="52px"
        android:layout_height="26px"
        android:layout_below="@+id/order_viewpager"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50px"
        android:background="@drawable/order_arrow_down"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/order_loading_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/order_loading_tips"
        android:textColor="@color/focus_color_yellow"
        android:textSize="40px" />

</RelativeLayout>