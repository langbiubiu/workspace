<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/app_dialog_width"
    android:layout_height="@dimen/app_dialog_height"
    android:background="@color/app_color_white1"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/notice_value"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_dialog_tips_height"
        android:gravity="center"
        android:focusable="false"
        android:text="@string/app_del_tips"
        android:textColor="@color/app_color_black"
        android:textSize="@dimen/app_text_size_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_dialog_btn_height"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dialog_enter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/app_dialog_btn_color"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/app_btn_ok"
            android:textColor="@drawable/app_dialog_textcolor"
            android:textSize="@dimen/app_text_size_24" />

        <TextView
            android:id="@+id/dialog_cancle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/app_dialog_btn_color"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/app_btn_no"
            android:textColor="@drawable/app_dialog_textcolor"
            android:textSize="@dimen/app_text_size_24" />
    </LinearLayout>

</LinearLayout>