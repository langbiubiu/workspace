<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="1445px"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/head_icon"
            android:layout_width="75px"
            android:layout_height="75px"
            android:layout_marginLeft="37px"
            android:layout_marginTop="41px"
             />

        <TextView
            android:id="@+id/comment_content"
            android:layout_width="1305px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25px"
            android:layout_marginTop="41px"
            android:layout_toRightOf="@+id/head_icon"
            android:lineSpacingExtra="11px"
            android:textColor="#A0A0A0"
            android:textSize="35px" />

        <TextView
            android:id="@+id/comment_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comment_content"
            android:layout_marginLeft="25px"
            android:layout_marginTop="30px"
            android:layout_toRightOf="@+id/head_icon"
            android:singleLine="true"
            android:textColor="#7B7B7B"
            android:textSize="28px" />

        <TextView
            android:id="@+id/comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comment_content"
            android:layout_marginLeft="36px"
            android:layout_marginTop="30px"
            android:layout_toRightOf="@+id/comment_user_name"
            android:singleLine="true"
            android:textColor="#7B7B7B"
            android:textSize="28px" />

        <RatingBar
            android:id="@+id/rate_bar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="31px"
            android:layout_marginLeft="55px"
            android:layout_alignBottom="@+id/comment_time"
            android:layout_toRightOf="@+id/comment_time"
            android:max="5"
            android:numStars="5"
            android:rating="4" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="37px"
            android:layout_below="@+id/comment_user_name"
            android:layout_marginLeft="25px"
            android:layout_toRightOf="@+id/head_icon"
            android:singleLine="true"
            android:textColor="#7B7B7B"
             />
        
    </RelativeLayout>

</RelativeLayout>