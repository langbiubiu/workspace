<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vod_free_bg" >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="104px"
        android:layout_marginTop="78px"
        android:text="@string/free_region"
        android:textColor="#fff"
        android:textSize="51px" />

    <ImageView
        android:id="@+id/free_3d"
        android:layout_width="457px"
        android:layout_height="697px"
        android:layout_marginLeft="140px"
        android:layout_marginTop="201px"
        android:focusable="true"
        android:scaleType="fitXY"
        android:background="@drawable/default_poster" />

    <ImageView
        android:id="@+id/free_movie"
        android:layout_width="224px"
        android:layout_height="224px"
        android:layout_alignTop="@+id/free_3d"
        android:layout_marginLeft="13px"
        android:layout_toRightOf="@+id/free_3d"
        android:focusable="true"
        android:src="@drawable/vod_enter01" />

    <ImageView
        android:id="@+id/free_teleplay"
        android:layout_width="224px"
        android:layout_height="224px"
        android:layout_alignTop="@+id/free_3d"
        android:layout_marginLeft="13px"
        android:layout_toRightOf="@+id/free_movie"
        android:focusable="true"
        android:src="@drawable/vod_enter02" />

    <ImageView
        android:id="@+id/free_recommend01"
        android:layout_width="460px"
        android:layout_height="225px"
        android:layout_below="@+id/free_movie"
        android:layout_marginLeft="13px"
        android:layout_marginTop="13px"
        android:layout_toRightOf="@+id/free_3d"
        android:focusable="true"
        android:scaleType="fitXY"
        android:background="@drawable/default_poster" />

    <ImageView
        android:id="@+id/free_recommend02"
        android:layout_width="460px"
        android:layout_height="225px"
        android:layout_below="@+id/free_recommend01"
        android:layout_marginLeft="13px"
        android:layout_marginTop="13px"
        android:layout_toRightOf="@+id/free_3d"
        android:focusable="true"
        android:scaleType="fitXY"
        android:background="@drawable/default_poster" />

    <FrameLayout
        android:id="@+id/vod_zhuanti"
        android:layout_width="697px"
        android:layout_height="458px"
        android:layout_alignTop="@+id/free_3d"
        android:layout_marginLeft="13px"
        android:layout_toRightOf="@+id/free_teleplay"
        android:focusable="true" >

        <ImageView
            android:id="@+id/free_zhuanti"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:background="@drawable/default_poster" />

        <ImageView
            android:id="@+id/free_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/vod_mark01" />
    </FrameLayout>

    <ImageView
        android:id="@+id/free_zongyi"
        android:layout_width="224px"
        android:layout_height="224px"
        android:layout_alignTop="@+id/free_recommend02"
        android:layout_marginLeft="13px"
        android:layout_toRightOf="@+id/free_recommend02"
        android:focusable="true"
        android:src="@drawable/vod_enter03" />

    <ImageView
        android:id="@+id/free_ad"
        android:layout_width="460px"
        android:layout_height="224px"
        android:layout_alignTop="@+id/free_zongyi"
        android:layout_marginLeft="13px"
        android:layout_toRightOf="@+id/free_zongyi"
        android:focusable="true"
        android:scaleType="fitXY"
        android:background="@drawable/free_ad" />

</RelativeLayout>