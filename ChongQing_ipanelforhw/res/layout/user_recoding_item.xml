<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/user_recod_item"
    android:focusable="true"
    android:clickable="true"
    android:background="@drawable/user_listitem_selector">
    <TextView
        android:id="@+id/recd_name"
        android:layout_height="100px"
        android:layout_width="530px"
        android:layout_marginLeft="10px"
        android:gravity="center|left"
        android:textSize="36px"
        android:focusable="false"
        android:singleLine="true"
		android:ellipsize="end"
        android:duplicateParentState="true"
        android:textColor="@drawable/user_del_text"/>
    <TextView
        android:id="@+id/recd_tv"
        android:layout_height="100px"
        android:layout_width="230px"
        android:layout_marginLeft="140px"
        android:gravity="center"
        android:textSize="36px"
        android:focusable="false"
        android:duplicateParentState="true"
        android:textColor="@drawable/user_del_text"/>
    <TextView
        android:id="@+id/has_recorded"
        android:layout_height="100px"
        android:layout_width="130px"
        android:layout_marginLeft="200px"
        android:gravity="center"
        android:textSize="36px"
        android:focusable="false"
        android:duplicateParentState="true"
        android:textColor="@drawable/user_del_text"/>
    <ImageView
        android:id="@+id/user_recode_del"
        android:layout_height="80px"
        android:layout_width="80px"
        android:layout_marginLeft="70px"
        android:layout_gravity="center_vertical"
        android:focusable="false"
        android:visibility="gone" 
        android:duplicateParentState="true"
        android:src="@drawable/user_recoding_seletor"/>

    

    

</LinearLayout>
