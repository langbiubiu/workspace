<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="530px"
    android:layout_height="277px" 
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:background="@drawable/common_voice_bg">
	<ImageView 
	    android:id="@+id/voice_img"
	    android:layout_width="160px"
	    android:layout_height="160px"
	    android:layout_centerInParent="true"
	    android:src="@drawable/common_voice00"/>
	<TextView 
	    android:id="@+id/voice_tip"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/voice_img"
	    android:layout_marginTop="20px"
	    android:layout_centerHorizontal="true"
	    android:text="@string/voice_tip_2"
	    android:textColor="@color/voice_tips_color"
	    android:textSize="30px"/>
	<TextView 
	    android:id="@+id/voice_type"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignTop="@+id/voice_tip"
	    android:layout_alignParentRight="true"
	    android:layout_marginRight="30px"
	    android:text="@string/putonghua"
	    android:textColor="@color/voice_tips_color"
	    android:textSize="30px"/>

</RelativeLayout>