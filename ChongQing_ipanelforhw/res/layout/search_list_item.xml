<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true" >

    <RelativeLayout
        android:id="@+id/search_rl"
        android:layout_width="736px"
        android:layout_height="103px" >

        <ImageView
            android:id="@+id/search_icon"
            android:layout_width="52px"
            android:layout_height="48px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5px"
            android:src="@drawable/search_icon01" />

        <TextView
            android:id="@+id/search_name"
            android:layout_width="634px"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100px"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="@string/tv_name"
            android:textColor="@color/white"
            android:textSize="40px" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/search_rl2"
        android:layout_width="736px"
        android:layout_height="225px"
        android:background="@drawable/search_list_bg"
        android:duplicateParentState="true"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/search_poster"
            android:layout_width="160px"
            android:layout_height="200px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"
            android:layout_marginTop="10px"
            android:scaleType="fitXY"
            android:src="@drawable/default_poster" />

        <TextView
            android:id="@+id/search_video_name"
            android:layout_width="407px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25px"
            android:layout_marginTop="15px"
            android:layout_toRightOf="@+id/search_poster"
            android:duplicateParentState="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="@string/tv_name"
            android:textColor="@color/vod_text_color"
            android:textSize="40px" />

        <ImageView
            android:id="@+id/search_douban_icon"
            android:layout_width="36px"
            android:layout_height="36px"
            android:layout_alignBottom="@+id/search_video_name"
            android:layout_alignParentRight="true"
            android:layout_marginRight="78px"
            android:src="@drawable/vod_douban_01" />

        <TextView
            android:id="@+id/search_douban_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/search_douban_icon"
            android:layout_marginLeft="663px"
            android:textColor="@color/red"
            android:textSize="28px" />

        <TextView
            android:id="@+id/search_director"
            style="@style/search_font_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/search_video_name"
            android:layout_below="@+id/search_video_name"
            android:layout_marginTop="10px"
            android:duplicateParentState="true"
            android:text="@string/director"
            android:textColor="@color/search_text_color" />

        <TextView
            android:id="@+id/search_director_name"
            style="@style/search_font_style"
            android:layout_width="432px"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/search_director"
            android:layout_marginLeft="5px"
            android:layout_toRightOf="@+id/search_director"
            android:duplicateParentState="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/search_text_color" />

        <TextView
            android:id="@+id/search_actor"
            style="@style/search_font_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/search_director"
            android:layout_below="@+id/search_director"
            android:layout_marginTop="10px"
            android:duplicateParentState="true"
            android:text="@string/actor"
            android:textColor="@color/search_text_color" />

        <TextView
            android:id="@+id/search_actor_name"
            style="@style/search_font_style"
            android:layout_width="432px"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/search_actor"
            android:layout_marginLeft="5px"
            android:layout_toRightOf="@+id/search_actor"
            android:duplicateParentState="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/search_text_color" />

        <TextView
            android:id="@+id/search_region"
            style="@style/search_font_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/search_actor"
            android:layout_below="@+id/search_actor"
            android:layout_marginTop="10px"
            android:duplicateParentState="true"
            android:text="@string/region"
            android:textColor="@color/search_text_color" />

        <TextView
            android:id="@+id/search_region_name"
            style="@style/search_font_style"
            android:layout_width="432px"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/search_region"
            android:layout_marginLeft="5px"
            android:layout_toRightOf="@+id/search_region"
            android:duplicateParentState="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/search_text_color" />
    </RelativeLayout>

</RelativeLayout>