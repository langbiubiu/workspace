<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="875px"
    android:layout_height="82.5px"
    android:background="@drawable/tvcloud_selector_menu_bg2"
    android:focusable="true"
    android:orientation="horizontal">
    <FrameLayout
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:duplicateParentState="true">
		 <ImageView
		    android:id="@+id/event_bg"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:background="@drawable/user_btn0"
		    android:visibility="gone"/>
		<RelativeLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:duplicateParentState="true">
		    <TextView
		        android:id="@+id/event_time"
		        android:layout_width="100px"
		        android:layout_height="82.5px"
		        android:layout_marginLeft="40px"
		        android:duplicateParentState="true"
		        android:gravity="center_vertical"
		        android:textColor="@drawable/tvcloud_selector_tab_text"
		        android:textSize="36px" />
		
		    <TextView
		        android:id="@+id/event_name"
		        android:layout_width="430px"
		        android:layout_height="82.5px"
		        android:layout_marginLeft="205px"
		        android:duplicateParentState="true"
		        android:gravity="center_vertical"
		        android:singleLine="true"
		        android:ellipsize="marquee" 
		        android:marqueeRepeatLimit="marquee_forever" 
		        android:textColor="@drawable/tvcloud_selector_tab_text"
		        android:textSize="36px" />
		    
		    <TextView
		        android:id="@+id/isRecorded"
		        android:layout_width="120px"
		        android:layout_height="82.5px"
		        android:layout_marginLeft="675px"
		        android:duplicateParentState="true"
		        android:gravity="center_vertical"
		        android:singleLine="true"
		        android:textColor="@drawable/tvcloud_selector_tab_text"
		        android:textSize="36px" />
		</RelativeLayout>
	</FrameLayout>
</LinearLayout>